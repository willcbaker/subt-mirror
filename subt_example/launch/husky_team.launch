<?xml version="1.0"?>
<launch>
  <!-- Launch the SubT world. -->
  <include file="$(find subt_gazebo)/launch/lava_tube.launch">
  </include>

  <!-- Spawn your team here. -->
  <arg name="laser_enabled" default="false"/>
  <arg name="kinect_enabled" default="false"/>

  <include file="$(find subt_example)/launch/spawn_husky.launch">
    <arg name="namespace" value="Husky1"/>
    <arg name="x" value="0"/>
    <arg name="y" value="0"/>
    <arg name="z" value="0"/>
    <arg name="yaw" value="0"/>
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
    <arg name="urdf_extras" value="$(find subt_example)/urdf/husky_equipments.urdf.xacro"/>
  </include>
  <include file="$(find subt_example)/launch/spawn_husky.launch">
    <arg name="namespace" value="Husky2"/>
    <arg name="x" value="2"/>
    <arg name="y" value="1"/>
    <arg name="z" value="0"/>
    <arg name="yaw" value="3.14159"/>
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
    <arg name="urdf_extras" value="$(find subt_example)/urdf/husky_equipments.urdf.xacro"/>
  </include>
  <include file="$(find subt_example)/launch/spawn_husky.launch">
    <arg name="namespace" value="Husky3"/>
    <arg name="x" value="-2"/>
    <arg name="y" value="0"/>
    <arg name="z" value="0"/>
    <arg name="yaw" value="1.5"/>
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
    <arg name="urdf_extras" value="$(find subt_example)/urdf/husky_equipments.urdf.xacro"/>
  </include>

  <!-- Iris quadcopter -->
  <group ns="Iris">
    <include file="$(find subt_example)/launch/spawn_iris.launch">
      <arg name="mav_name" value="Iris" />
      <arg name="x" value="-1"/>
      <arg name="y" value="-1"/>
      <arg name="z" value="0"/>
    </include>
    <!-- Sends motor commands to hold position -->
    <node name="lee_position_controller_node" pkg="rotors_control" type="lee_position_controller_node">
      <rosparam command="load" file="$(find rotors_gazebo)/resource/lee_controller_iris.yaml" />
      <rosparam command="load" file="$(find rotors_gazebo)/resource/iris.yaml" />
      <remap from="odometry" to="odometry_sensor1/odometry" />
    </node>
    <!-- Given robot_descriptom parameter and joint states, publish TF frames -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <!-- Convert cmd_vel into pose command so as to provide the same interface -->
    <node name="cmdvel_transform" pkg="subt_example" type="cmdvel_converter.py" args="/Iris/odometry_sensor1/pose /Iris/cmd_vel /Iris/command/pose"/>
  </group>

  <!-- Competitor's control nodes -->
  <node name="Husky1_control" pkg="subt_example" type="subt_example_node" args="Husky1 128.0.0.10" />
  <node name="Husky2_control" pkg="subt_example" type="subt_example_node" args="Husky2 128.0.0.11" />
  <node name="Husky3_control" pkg="subt_example" type="subt_example_node" args="Husky3 128.0.0.12" />
  <node name="Iris_control" pkg="subt_example" type="subt_example_node" args="Iris 128.0.0.13" />

  <!-- Teleop node -->
  <include file="$(find subt_example)/launch/teleop.launch">
    <arg name="robot_config" value="$(find subt_example)/config/husky_config.yaml"/>
  </include>

</launch>
